            {{#if isAuthenticated}}
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">{{username}}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Log out</a>
            </li>
            {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Log in</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/signup"> Sign Up</a>
            </li>
            <li class="nav-item">
