<div class="container-fluid" class="d-flex flex-row mb-3">

  <h1 class="card-text">{{post.username}} Profile</h1>

  {{#each post.posts}}

    <div class="card" style="width: 18rem;">
      {{!-- <img src="{{foto}}" class="card-img-top" alt="..." /> --}}
      <div class="card-body">
        <img src="{{this.foto}}" class="card-img-top" />
        <p class="card-text">{{detalles}}</p>
        <p class="card-text">{{this.location}}</p>
        <a href="/user/{{_id}}" class="btn btn-dark">More</a>
      </div>
    </div>

  {{/each}}

</div>